<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <View android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/line_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <Button android:id="@+id/retweet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/retweet"
            android:textSize="@dimen/comment_text_size"
            android:textColor="@drawable/comment_txt_selecter"
            android:background="@null"/>

        <Button android:id="@+id/comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/comment"
            android:textSize="@dimen/comment_text_size"
            android:textColor="@drawable/comment_txt_selecter"
            android:background="@null"/>

        <CheckBox android:id="@+id/attitude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/attitude"
            android:gravity="center"
            android:textSize="@dimen/comment_text_size"
            android:textColor="@drawable/comment_txt_selecter"
            android:button="@null"
            android:background="@null"/>
    </LinearLayout>
</merge>
