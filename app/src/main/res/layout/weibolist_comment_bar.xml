<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp"
    android:gravity="right">

    <com.rey.material.widget.Button android:id="@+id/retweet"
        android:layout_width="@dimen/comment_button_size"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:textSize="@dimen/comment_text_size"
        android:textColor="@drawable/comment_txt_selecter"
        style="@style/LightFlatButtonRippleStyle"
        android:background="@null"/>

    <com.rey.material.widget.Button android:id="@+id/comment"
        android:layout_width="@dimen/comment_button_size"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:textSize="@dimen/comment_text_size"
        android:textColor="@drawable/comment_txt_selecter"
        style="@style/LightFlatButtonRippleStyle"
        android:background="@null"/>

    <com.rey.material.widget.Button android:id="@+id/attitude"
        android:layout_width="@dimen/comment_button_size"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:textSize="@dimen/comment_text_size"
        android:textColor="@drawable/comment_txt_selecter"
        style="@style/LightFlatButtonRippleStyle"
        android:background="@null"/>
</LinearLayout>
